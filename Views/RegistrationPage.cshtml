<!-- HTML code for farmer registration page -->
<form action="/Registration/Register" method="post">
    <label for="username">Fullname:</label>
    <input type="text" id="fullname" name="fullname" required><br>

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required><br>

    <label for="password">Confirm_Password:</label>
    <input type="password" id="password_confirmation" name="password_confirmation" required><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br>

    <label for="national_id">ID no:</label>
    <input type="number" id="national_id" name="national_id" required><br>

    <label for="phone">Phone:</label>
    <input type="tel" id="phone" name="phone" required><br>

    <label for="location">Location:</label>
    <input type="text" id="location" name="location" required><br>


    
    <button type="submit">Register</button>
</form>